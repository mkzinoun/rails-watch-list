<div class="banner">
  <div class="container text-center">
    <h1>Save any kind of movies</h1>
    <p>We can't remember everything.</p>
  </div>
</div>

<div class="container py-4">
  <div class="d-flex mb-4">
    <h4 class="flex-grow-1">My lists</h4>
    <%= link_to "Create a list", new_list_path, class: "btn btn-primary" %>
  </div>
  <div class="d-flex flex-row justify-content-around">
    <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height:300, crop: :fill %>')">
      <%= link_to list.name, list_path(list), class: "card-category" %>
    </div>
    <% end %>
  </div>
</div>
