<div class="banner">
  <div class="container text-center">
    <h1>Save any kind of movies</h1>
    <p>We can't remember everything.</p>
  </div>
</div>

<div class="container py-4">
  <div class="d-flex">
  <h4 class="flex-grow-1">My lists</h4>
  <%= link_to "Create a list", new_list_path, class: "btn btn-primary" %>
  </div>
  <ul>
    <% @lists.each do |list| %>
      <div class="card-category">
        <li>
          <%= link_to list.name, list_path(list) %>
        </li>
      </div>
    <% end %>
  </ul>
</div>
